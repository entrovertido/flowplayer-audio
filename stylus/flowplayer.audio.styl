.is-audio.flowplayer
  .fp-engine
    top -99999em

  .fp-player
    background-size contain
    background-repeat no-repeat
    background-position center

.is-audio.flowplayer.is-poster
  .fp-player
    background-size 0

.is-audio-only.flowplayer
  .fp-engine
  >a
    top -99999em

  .fp-brand
  .fp-controls
  .fp-time
    display block !important

  &.is-audio-only-7x
    background-color rgba(0, 0, 0, 0) !important

    .fp-ui
      cursor default

    .fp-controls
    .fp-timeline
      display -ms-flexbox !important
      display -webkit-flex !important
      display flex !important
      cursor pointer

    .fp-timeline
      width 100% !important

    &.is-loading
      .fp-controls
        opacity 1

  &.is-splash
    .fp-duration
    .fp-timeline
    .fp-timeline-tooltip
    .fp-timestamp
      display none
      cursor default

    .fp-buffer
    .fp-progress
    .fp-volumelevel
      width 0 !important
